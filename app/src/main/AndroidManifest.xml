<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mark.rpg">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activityControllers.StartGameActivity"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activityControllers.BattleActivityController"
            android:theme="@style/noTitle"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activityControllers.HeroInfoController"
            android:theme="@style/noTitle"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activityControllers.ChooseEnemy"
            android:theme="@style/noTitle">
        </activity>
        <activity
            android:name=".activityControllers.CreateHeroActivity"
            android:theme="@style/noTitle"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>